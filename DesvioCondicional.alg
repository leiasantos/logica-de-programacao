algoritmo "DesvioCondicional"
// DESVIO CONDICIONAL SIMPLES
// DESVIO CONDICIONAL COMPOSTO
var

idade: inteiro



inicio

escreva("Informe sua idade")
leia(idade)

se(idade >= 18)entao
escreva("Você pode tirar sua CNH")
senao
escreva("Você é menor de idade, não pode tirar sua CNH")
fimse


fimalgoritmo
